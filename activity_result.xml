<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/foodex3"
        android:layout_width="350dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sim"
        android:gravity="center"
        android:text="문구3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/im2"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/edge"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/foodex2"
        android:layout_width="350dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sim"
        android:gravity="center"
        android:text="문구2"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/im1"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edge"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/im2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/foodex1"
        android:layout_width="350dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sim"
        android:gravity="center"
        android:text="문구1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/im3"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edge"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im2"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>
